/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean aux(TreeNode root, Integer low, Integer high){
        if(root==null)
            return true;
        if(low!=null&&root.val<=low)
            return false;
        if(high!=null&&root.val>=high)
            return false;
        
        if(!aux(root.left,low,root.val))
            return false;
        if(!aux(root.right,root.val,high))
            return false;
        return true;
    }
    
    public boolean isValidBST(TreeNode root) {
        return aux(root,null,null);
    }
}
